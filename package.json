{
  "name": "ultira",
  "version": "0.0.1",
  "private": true,
  "description": "ultimate jira tool",
  "author": {
    "name": "Daniel Terletzkiy",
    "email": "danielterletzkiy@gmail.com"
  },
  "scripts": {
    "build": "vite build",
    "dev": "concurrently \"cross-env NODE_ENV=development&& vite\" \"npm run node\" ",
    "node": "nodemon electron/Server.js",
    "electron:start": "cross-env NODE_ENV=development concurrently \"vite\" \"electron electron/main\" ",
    "electron:dist": "npm run build && electron-builder build",
    "electron:release": "npm run build && electron-builder build --publish always",
    "preview": "vite preview"
  },
  "debug": {
    "env": {
      "VITE_DEV_SERVER_URL": "http://localhost:3000/"
    }
  },
  "build": {
    "appId": "com.github.DanielTerletzkiy.ultira",
    "icon": "public/favicon.ico",
    "publish": [
      {
        "provider": "github",
        "owner": "DanielTerletzkiy",
        "repo": "ultira"
      }
    ],
    "directories": {
      "output": "release/${version}"
    },
    "files": [
      "dist-electron",
      "electron",
      "dist"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "main": "dist-electron/main/index.js",
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@nanogiants/vue3-longpress": "^1.0.8",
    "@rushstack/eslint-patch": "^1.1.4",
    "@vue/cli-service": "^5.0.4",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vueuse/components": "^8.5.0",
    "@vueuse/core": "^8.7.4",
    "@vueuse/electron": "^8.6.0",
    "chalk": "^4.1.2",
    "concurrently": "^7.2.1",
    "cors": "^2.8.5",
    "electron-log": "^5.0.0-beta.16",
    "electron-updater": "^5.3.0",
    "http-proxy-middleware": "^2.0.6",
    "jira2md": "2.1.0",
    "lodash": "^4.17.21",
    "shelljs": "^0.8.5",
    "socket.io": "^4.5.1",
    "socket.io-client": "^4.5.1",
    "vite-plugin-electron": "^0.11.1",
    "vite-plugin-electron-renderer": "^0.12.1",
    "vue": "^3.2.37",
    "vue-ellipse-progress": "^2.1.1",
    "vue3-carousel": "^0.1.46",
    "vuelize": "^0.1.42",
    "vuex": "^4.0.2",
    "vuex-persist": "^3.1.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@types/shelljs": "^0.8.11",
    "@vitejs/plugin-vue": "^3.0.3",
    "cross-env": "^7.0.3",
    "electron": "^19.0.1",
    "electron-builder": "latest",
    "electron-packager": "^15.5.1",
    "node-sass": "^7.0.3",
    "prettier": "2.7.1",
    "sass": "^1.50.0",
    "sass-loader": "^13.0.0",
    "typescript": "^4.5.4",
    "vite": "^3.0.8",
    "vue-tsc": "^0.34.7"
  }
}
